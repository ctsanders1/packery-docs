<!doctype html>
<html class="{{#if isExport}}export{{/if}}" lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="Gapless, draggable grid layouts" />

  <title>Packery{{#unless page.isHomepage}} &middot; {{page.title}}{{/unless}}</title>

  {{#if isDev}}
    {{! DEV MODE - including each .css file }}
    {{#each css_paths}}
      <link rel="stylesheet" href="../{{this}}" />
    {{/each}}
  {{else}}
    {{! in production, just include concat CSS }}
    <link rel="stylesheet" href="{{#if page.is404}}/{{/if}}css/packery-docs.css" media="screen" />
  {{/if}}

  {{! Twitter Cards }}
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@metafizzyco" />
  <meta name="twitter:title" content="Packery{{#unless page.isHomepage}} {{page.title}}{{/unless}}" />
  <meta name="twitter:description" content="Gapless, draggable grid layouts" />

</head>
<body class="{{basename}}-page" data-page="{{basename}}">

{{> site-nav }}

{{! display hero only on index page }}
{{#if page.isHomepage}}
  {{> hero }}
  {{> what-is-packery }}
{{/if}}

<div id="content" class="main">

  <div class="primary-content">
    {{#unless page.isHomepage}}
      <h1>{{page.title}}</h1>
      {{/unless}}

    {{! page-nav }}
    <ul class="page-nav" data-js="page-nav"></ul>

{{! all page content goes here }}
{{> body}}
  </div>

</div>

{{> site-nav }}

{{> site-footer }}

<!-- Packery does NOT require jQuery.
  jQuery is only used for jQuery UI Draggable -->
<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
<script>window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script>

{{#if isDev}}
  {{#each js_paths}}
    {{! DEV MODE - including each .js file }}
    <script src="../{{this}}"></script>
  {{/each}}
{{else}}
  {{! in production, just include concat/minified js }}
  <script src="{{#if page.is404}}/{{/if}}js/packery-docs.min.js"></script>
{{/if}}

{{#unless isExport}}
  <!-- Google Analytics -->
  <script>
  (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
    function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
    e=o.createElement(i);r=o.getElementsByTagName(i)[0];
    e.src='//www.google-analytics.com/analytics.js';
    r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
    ga('create','UA-58739927-4','auto');ga('send','pageview');
  </script>
{{/unless}}

</body>
</html>
