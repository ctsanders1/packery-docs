<!doctype html>
<html>
<head>
  <meta charset="utf-8">

  <title>{{#unless page.is_homepage}}{{page.title}} &middot; {{/unless}}Packery</title>

  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet'>
  <!-- <link rel="stylesheet" href="css/packery-site.css"> -->
  {{#each site.css}}
    <link rel="stylesheet" href="../{{this}}">
  {{/each}}


</head>
<body class="{{basename}}-page" data-page="{{basename}}">

  <div id="site-nav">
    <h1><a href=".">Packery</a></h1>
    <ol>
      <li class="nav-options"><a href="options.html">Options</a></li>
      <li class="nav-methods"><a href="methods.html">Methods</a></li>
      <li class="nav-events"><a href="events.html">Events</a></li>
      <li class="nav-draggable"><a href="draggable.html">Draggable</a></li>
      <li class="nav-license"><a href="license.html">License</a></li>
      <li class="nav-appendix"><a href="appendix.html">Appendix</a></li>
    </ol>
  </div>

  {{! display hero only on index page }}
  {{#if page.is_homepage}}
    {{>hero}}
  {{/if}}

  {{! page nav }}
  {{#if page.nav}}
    <ul id="page-nav">
      {{#each page.nav}}
        <li><a href="#{{slug this}}">{{this}}</a></li>
      {{/each}}
    </ul>
  {{/if}}

  <div id="content">
    {{#unless page.is_homepage}}
      <h1>{{page.title}}</h1>
    {{/unless}}
    {{{ content }}}
  </div>

<!-- Packery does NOT require jQuery.
     jQuery is only used for jQuery UI Draggable -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="../components/jquery/jquery.min.js"><\/script>')</script>

{{#each site.js}}
  <script src="../{{this}}"></script>
{{/each}}

</body>
</html>
